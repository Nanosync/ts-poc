{
  "baseUrl": "src",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "es2020.promise"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "outDir": "build/"
  },
  "include": ["src"]
}
